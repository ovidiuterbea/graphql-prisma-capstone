generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id     String  @id @default(uuid())
  name   String  @unique
  user   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String
  roles    Role[]
}
